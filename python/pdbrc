# Enable tab completion
import rlcompleter
pdb.Pdb.complete = rlcompleter.Completer(locals()).complete

# Print local variables
alias pl print({k: v for k,v in locals().items() if '__' not in k and 'pdb' not in k})

# Print class contents (including methods)
alias pc for k,v in sorted({k:v for cls in reversed(%1.__class__.__mro__) for k,v in cls.__dict__.items() if cls is not object}.items()): print("%s%-20s= %-80.80s" % ("%1.",k,repr(v)))

# Print instance variables
alias pi print(vars((%1)))

# Print the instance variables of self
alias ps pi self
